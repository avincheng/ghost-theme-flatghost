{{!-- SEO --}}

{{#is "index"}}
  <meta name="description" content="{{@blog.description}}"/>
  <meta name="keywords" content="{{@blog.title}},ghost"/>
{{/is}}

{{#is "post, page"}}
  {{#post}}
    <meta name="description" content="{{excerpt characters="150"}}"/>
    {{#if tags}}
      <meta name="keywords" content="{{tags autolink="false" separator=","}}"/>
    {{else}}
      <meta name="keywords" content="{{title}}"/>
    {{/if}}
  {{/post}}
{{/is}}

{{#is "tag"}}
  {{#tag}}
    <meta name="description" content="“{{@blog.title}}”博客中“{{name}}”分类下的文章列表" />
    <meta name="keywords" content="{{name}}"/>
  {{/tag}}
{{/is}}

{{#is "author"}}
  {{#author}}
    <meta name="description" content="“{{@blog.title}}”博客中作者“{{name}}”的个人信息及文章列表"/>
    <meta name="keywords" content="{{name}}"/>
  {{/author}}
{{/is}}
