      <li>
        <a href="{{facebook_url}}"
           title="FaceBook"
           target="_blank"
           rel="nofollow">
          <i class="icon-social icon-social-facebook"></i>
        </a>
      </li>
    {{/if}}

    {{#if @blog.twitter}}
      <li>
        <a href="{{twitter_url}}"
           title="Twitter"
           target="_blank"
           rel="nofollow">
          <i class="icon-social icon-social-twitter"></i>
