{{!-- Widget: Blog Stat --}}

<div class="widget widget-blog-stat">
  <div class="widget-title">Statistic</div>

  <ul class="clearfix">
    <li>
      <i class="icon-stat icon-stat-posts"></i>
      {{#get 'posts' as |posts postsObj|}}
        <span>{{postsObj.total}}</span>
      {{/get}}
    </li>

    <li>
      <i class="icon-stat icon-stat-tags"></i>
      {{#get 'tags' as |tags tagsObj|}}
        <span>{{tagsObj.total}}</span>
      {{/get}}
    </li>
  </ul>
</div>
