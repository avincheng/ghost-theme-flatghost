{{!-- widget: main navigation --}}


<ul class="widget-blog-nav widget" role="menubar">
    {{#if @blog.navigation}}
        {{#foreach navigation}}
            <li class="menu-item {{#if current}}menu-current{{/if}}" role="menuitem">
                <a href="{{url absolute="true"}}">{{label}}</a>
            </li>
        {{/foreach}}
    {{/if}}
</ul>
